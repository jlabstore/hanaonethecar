<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="default-layout" template="/WEB-INF/tiles/layout/base-main.jsp">
        <put-attribute name="topbar" value="/WEB-INF/tiles/layout/topbar.jsp"/>
        <put-attribute name="sidebar" value="/WEB-INF/tiles/layout/sidebar.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/tiles/layout/footer.jsp"/>
    </definition>

    <definition name="onethecar.*" extends="default-layout">
        <!-- <put-attribute name="left" value="/WEB-INF/views/tiles/left/common-left.jsp" /> -->
        <put-attribute name="body" value="/WEB-INF/views/{2}.jsp" />
    </definition>

    <definition name="onethecar.*/*" extends="default-layout">
        <!-- <put-attribute name="left" value="/WEB-INF/views/tiles/left/{1}-left.jsp" /> -->
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>

</tiles-definitions>